@model UserViewModel
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Title"];
}

<h1>@ViewData["Title"]</h1>

<h3>@Localizer["Message"]</h3>
<hr />

<div>
    <dl class="row">
        <dt class = "col-sm-2">
            <label asp-for="@Model.UserName"></label>
        </dt>
        <dd class = "col-sm-10">
            @Model.UserName
        </dd>
        <dt class="col-sm-2">
            <label asp-for="@Model.IsAdmin"></label>
        </dt>
        <dd class="col-sm-10">
            <tick value="@Model.IsAdmin"></tick>
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="@Model.Id" />
        <input type="submit" value="@Localizer["Delete"]" class="btn btn-danger" />
    </form>
    <a asp-action="Index">@Localizer["Back"]</a>
</div>

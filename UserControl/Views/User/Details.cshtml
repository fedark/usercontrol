@model UserViewModel
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Title"];
}

<h1>@ViewData["Title"]</h1>
<hr />

<div>
    <dl class="row">
        <dt class="col-sm-2">
            <label asp-for="@Model.Picture"></label>
        </dt>
        <dd class="col-sm-10">
            <img src="@Url.Action("LoadUserPicture", "UserPicture", new { id = Model.Id })" class="img-thumbnail img-user" />
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="@Model.UserName"></label>
        </dt>
        <dd class = "col-sm-10">
            @Model.UserName
        </dd>
        <dt class="col-sm-2">
            <label asp-for="@Model.IsAdmin"></label>
        </dt>
        <dd class="col-sm-10">
            <tick value="Model.IsAdmin"></tick>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index">@Localizer["Back"]</a>
</div>
